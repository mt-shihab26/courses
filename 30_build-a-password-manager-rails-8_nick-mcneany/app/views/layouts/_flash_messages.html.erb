<div class="fixed top-4 right-4 z-50 flex flex-col gap-2 max-w-md" data-controller="toast">
  <% if alert = flash[:alert] %>
    <div
      data-toast-target="message"
      class="toast-enter pointer-events-auto flex w-full items-center justify-between gap-4 rounded-lg border border-border bg-card text-card-foreground px-4 py-3 shadow-lg"
    >
      <div class="flex items-center gap-3">
        <div class="shrink-0">
          <svg class="h-5 w-5 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <p class="text-sm font-medium text-destructive"><%= alert %></p>
      </div>
      <button
        type="button"
        data-action="click->toast#dismiss"
        class="shrink-0 cursor-pointer text-muted-foreground hover:text-foreground transition-colors"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  <% end %>

  <% if notice = flash[:notice] %>
    <div
      data-toast-target="message"
      class="toast-enter pointer-events-auto flex w-full items-center justify-between gap-4 rounded-lg border border-border bg-card text-card-foreground px-4 py-3 shadow-lg"
    >
      <div class="flex items-center gap-3">
        <div class="shrink-0">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-sm font-medium text-primary"><%= notice %></p>
      </div>
      <button
        type="button"
        data-action="click->toast#dismiss"
        class="shrink-0 cursor-pointer text-muted-foreground hover:text-foreground transition-colors"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  <% end %>
</div>
