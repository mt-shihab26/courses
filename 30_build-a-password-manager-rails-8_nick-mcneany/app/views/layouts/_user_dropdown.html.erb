<div class="relative" data-controller="user-dropdown">
  <button
    type="button"
    class="flex items-center space-x-3 rounded-lg px-3 py-2 hover:bg-accent hover:text-accent-foreground"
    data-action="click->user-dropdown#toggle click@window->user-dropdown#hide"
  >
    <div class="flex h-8 w-8 items-center justify-center bg-primary text-sm font-medium text-primary-foreground">
      JD
    </div>
    <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div
    data-user-dropdown-target="menu"
    class="absolute right-0 mt-2 w-72 origin-top-right rounded-lg bg-popover border border-border shadow-lg focus:outline-none hidden"
  >
    <div class="border-b border-border px-4 py-3">
      <div class="flex items-center space-x-3">
        <div class="flex h-12 w-12 items-center justify-center bg-primary text-lg font-medium text-primary-foreground">
          JD
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-semibold text-popover-foreground truncate">John Doe</p>
          <p class="text-sm text-muted-foreground truncate">john@example.com</p>
        </div>
      </div>
    </div>
    <div class="py-1">
      <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-popover-foreground hover:bg-accent hover:text-accent-foreground" do %>
        <svg class="mr-3 h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Profile
      <% end %>
      <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-popover-foreground hover:bg-accent hover:text-accent-foreground" do %>
        <svg class="mr-3 h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Settings
      <% end %>
      <button
        type="button"
        class="flex w-full items-center px-4 py-2 text-sm text-popover-foreground hover:bg-accent hover:text-accent-foreground"
        data-action="click->dark-mode#toggle"
      >
        <svg class="mr-3 h-5 w-5 text-muted-foreground hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="mr-3 h-5 w-5 text-muted-foreground block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <span class="hidden dark:block">Light Mode</span>
        <span class="block dark:hidden">Dark Mode</span>
      </button>
    </div>
    <div class="border-t border-border py-1">
      <%= button_to session_path, method: :delete, class: "flex w-full items-center px-4 py-2 text-left text-sm text-destructive hover:bg-destructive/10" do %>
        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Logout
      <% end %>
    </div>
  </div>
</div>
