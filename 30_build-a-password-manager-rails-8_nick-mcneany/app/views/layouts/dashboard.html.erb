<% content_for :body do %>
  <!-- Navigation Bar -->
  <nav class="border-b border-slate-200 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <!-- Logo and Navigation Links -->
        <div class="flex items-center space-x-8">
          <!-- Logo -->
          <div class="flex items-center">
            <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <span class="ml-2 text-xl font-semibold text-slate-900">Safe Pass</span>
          </div>

          <!-- Navigation Links -->
          <div class="hidden md:flex md:space-x-1">
            <%= link_to "Dashboard", dashboard_path, class: "rounded-lg px-3 py-2 text-sm font-medium text-slate-900 hover:bg-slate-100" %>
            <%= link_to "Passwords", "#", class: "rounded-lg px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 hover:text-slate-900" %>
            <%= link_to "Secure Notes", "#", class: "rounded-lg px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 hover:text-slate-900" %>
            <%= link_to "Payment Cards", "#", class: "rounded-lg px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 hover:text-slate-900" %>
            <%= link_to "About", about_path, class: "rounded-lg px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 hover:text-slate-900" %>
          </div>
        </div>

        <!-- User Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            class="flex items-center space-x-3 rounded-lg px-3 py-2 hover:bg-slate-100"
            data-action="click->dropdown#toggle click@window->dropdown#hide"
          >
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 text-sm font-medium text-white">
              JD
            </div>
            <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            data-dropdown-target="menu"
            class="absolute right-0 mt-2 w-72 origin-top-right rounded-lg border border-slate-200 bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
          >
            <!-- User Info -->
            <div class="border-b border-slate-200 px-4 py-3">
              <div class="flex items-center space-x-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-full bg-indigo-600 text-lg font-medium text-white">
                  JD
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-slate-900 truncate">John Doe</p>
                  <p class="text-sm text-slate-500 truncate">john@example.com</p>
                </div>
              </div>
            </div>

            <!-- Menu Items -->
            <div class="py-1">
              <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" do %>
                <svg class="mr-3 h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Profile
              <% end %>

              <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" do %>
                <svg class="mr-3 h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Settings
              <% end %>
            </div>

            <!-- Logout -->
            <div class="border-t border-slate-200 py-1">
              <%= button_to "#", method: :delete, class: "flex w-full items-center px-4 py-2 text-left text-sm text-red-700 hover:bg-red-50" do %>
                <svg class="mr-3 h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Logout
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <%= yield %>
  </div>
<% end %>

<%= render template: "layouts/application" %>
