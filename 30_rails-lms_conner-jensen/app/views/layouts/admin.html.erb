<% content_for :content do %>
  <div class="min-h-screen flex flex-col">
    <header class="bg-white border-b border-purple-200 sticky top-0 z-10">
      <div class="container mx-auto px-6 py-3">
        <div class="flex items-center space-x-8">
          <div class="flex items-center space-x-2 text-lg font-semibold">
            <%= link_to "Academix", "/" %>
            <span>/</span>
            <%= link_to "Admin", "/admin", class: "hover:underline transition" %>
          </div>
          <div class="flex items-center justify-between space-x-6 w-full">
            <nav class="flex items-center space-x-1">
              <% links = [
                { "label" => "Overview", "href" => "/admin" },
                { "label" => "Students", "href" => "/students" },
                { "label" => "Courses", "href" => "/courses" }
              ] %>
              <% links.each do |link| %>
                <%= link_to link["label"], link["href"], class: "px-4 py-2 hover:underline rounded-lg text-sm font-medium transition #{request.path == link["href"] ? 'text-purple-800' : ''}" %>
              <% end %>
            </nav>
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gray-50 rounded-full flex items-center border border-gray-100 justify-center font-semibold text-sm">
                SM
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <main class="flex-1 bg-purple-50">
      <div class="container mx-auto px-6 py-8">
        <%= yield %>
      </div>
    </main>
  </div>
<% end %>

<%= render template: "layouts/application" %>

